        <item name="android:textColor">@color/mov1</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">@dimen/_270sdp</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
